{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"],
      "@controller/*": ["controllers/*"], // alias cho đường dẫn đến các file trong thư mục /src/controllers
      "@models/*": ["models/*"], // alias cho đường dẫn đến các file trong thư mục /src/models
      "@ỉnterfaces/*": ["interfaces/*"],
      "@middleware/*": ["middleware/*"],
      "@router/*": ["router/*"],
      "@provider/*": ["provider/*"]
    }
  },
  "include": ["src/**/*"]
}
